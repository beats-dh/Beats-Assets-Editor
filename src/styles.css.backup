/* Global Reset & Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 16px;
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-family);
  background: var(--primary-bg);
  color: var(--text-primary);
  line-height: 1.6;
  overflow-x: hidden;
}

/* Loading Screen */
.loading-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: var(--gradient-surface);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-container {
  text-align: center;
  max-width: 500px;
  padding: var(--space-xl);
}

.loading-logo {
  margin-bottom: var(--space-2xl);
}

.tibia-logo {
  font-size: 4rem;
  margin-bottom: var(--space-md);
  animation: pulse 2s ease-in-out infinite;
}

.loading-logo h1 {
  font-size: 2.5rem;
  font-weight: 700;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: var(--space-sm);
}

.loading-subtitle {
  color: var(--text-secondary);
  font-size: 1.1rem;
  font-weight: 500;
}

.loading-progress {
  margin-bottom: var(--space-2xl);
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: var(--tertiary-bg);
  border-radius: var(--radius-lg);
  overflow: hidden;
  margin-bottom: var(--space-md);
}

.progress-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: var(--radius-lg);
  width: 0%;
  transition: width var(--transition-normal);
}

.loading-text {
  color: var(--text-muted);
  font-size: 0.9rem;
}

.setup-section {
  opacity: 0;
  transform: translateY(20px);
  transition: all var(--transition-slow);
}

.setup-section.show {
  opacity: 1;
  transform: translateY(0);
}

.setup-card {
  background: var(--gradient-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-xl);
  padding: var(--space-2xl);
  box-shadow: var(--shadow-lg);
}

.setup-card-actions {
  display: flex;
  justify-content: flex-end;
  margin-bottom: var(--space-lg);
}

.setup-main-menu-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-soft);
  background: rgba(15, 23, 42, 0.6);
  color: var(--text-secondary);
  font-weight: 600;
  transition: border-color var(--transition-normal), background var(--transition-normal), color var(--transition-normal), transform var(--transition-normal);
  cursor: pointer;
}

.setup-main-menu-btn:hover {
  background: rgba(15, 23, 42, 0.85);
  border-color: var(--border-hover);
  color: var(--text-primary);
  transform: translateY(-1px);
}

.setup-card h2 {
  font-size: 1.5rem;
  margin-bottom: var(--space-lg);
  color: var(--text-primary);
}

/* Main Application */
.main-app {
  min-height: 100vh;
  background: var(--primary-bg);
}

/* App Header */
.app-header {
  background: var(--gradient-surface);
  border-bottom: 1px solid var(--border-color);
  padding: var(--space-sm) 0; /* reduzir altura vertical */
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10px);
}

.header-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-md); /* menos espaço lateral */
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo-section {
  display: flex;
  align-items: center;
  gap: var(--space-sm); /* menor espaçamento */
}

.app-logo {
  font-size: 1.5rem; /* menor ícone */
  animation: pulse 3s ease-in-out infinite;
}

.app-title h1 {
  font-size: 1.1rem; /* menor título */
  font-weight: 700;
  color: var(--text-primary);
}

.app-subtitle {
  display: none; /* esconder subtítulo para visual minimalista */
}

.stat-item {
  text-align: center;
  padding: var(--space-sm) var(--space-md);
  background: var(--tertiary-bg);
  border-radius: var(--radius-md);
  border: 1px solid var(--border-color);
}

.stat-value {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--primary-accent);
}

.stat-label {
  font-size: 0.75rem;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stat-subtitle {
  font-size: 0.65rem;
  color: var(--text-disabled);
  margin-top: 0.25rem;
  font-style: italic;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: var(--space-sm); /* reduzir espaçamento entre botões */
  position: relative;
}

.icon-btn {
  width: 40px;
  height: 40px;
  border: 1px solid var(--border-soft);
  background: var(--control-bg); /* consistente com minimalismo */
  color: var(--text-secondary);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.1rem; /* menor tamanho do ícone */
}

.icon-btn:hover {
  background: var(--surface-bg);
  border-color: var(--border-hover);
  color: var(--text-primary);
  transform: translateY(-1px);
}

/* Settings menu styles */
.settings-menu {
  position: absolute;
  top: 48px;
  right: 0;
  min-width: 240px;
  display: none;
  flex-direction: column;
  gap: var(--space-md);
  background: var(--control-bg);
  border: 1px solid var(--border-soft);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  padding: var(--space-md);
  z-index: 100;
}

.settings-menu.show {
  display: flex;
}

.settings-item {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  color: var(--text-primary);
  font-size: 0.9rem;
}

.settings-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.settings-section-header {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.settings-title {
  font-size: 0.95rem;
  font-weight: 600;
  color: var(--text-primary);
}

.settings-description {
  font-size: 0.8rem;
  color: var(--text-muted);
}

.settings-select {
  width: 100%;
  height: var(--control-height);
  background: var(--surface-bg);
  color: var(--text-primary);
  border: 1px solid var(--border-soft);
  border-radius: var(--radius-md);
  padding: 0 var(--space-sm);
  font-size: 0.9rem;
  transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
}

.settings-select:focus {
  outline: none;
  border-color: var(--border-focus);
  box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.25);
}

.theme-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: var(--space-sm);
}

.theme-option {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: var(--space-xs);
  padding: var(--space-sm);
  background: var(--tertiary-bg);
  border: 1px solid var(--border-soft);
  border-radius: var(--radius-md);
  color: var(--text-secondary);
  font-size: 0.85rem;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.theme-option:hover {
  border-color: var(--border-hover);
  color: var(--text-primary);
  transform: translateY(-1px);
}

.theme-option.active {
  border-color: var(--border-focus);
  color: var(--text-primary);
  box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.25);
}

.theme-name {
  font-weight: 600;
}

.theme-preview {
  display: flex;
  gap: 4px;
}

.color-swatch {
  width: 14px;
  height: 14px;
  border-radius: var(--radius-sm);
  border: 1px solid rgba(15, 23, 42, 0.4);
}

.settings-item label {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.menu-divider {
  height: 1px;
  background: var(--border-color);
  margin: var(--space-md) 0;
  opacity: 0.6;
}

.menu-btn {
  width: 100%;
  padding: var(--space-sm) var(--space-md);
  border: 1px solid var(--border-soft);
  background: var(--tertiary-bg);
  color: var(--text-secondary);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.menu-btn:hover {
  background: var(--surface-bg);
  color: var(--text-primary);
  border-color: var(--border-hover);
}

/* Header Stats Grid (disabled/minimal) */
.header-stats {
  display: none !important; /* esconder completamente área de stats no header */
}

/* Category counts as pill badges */
.category-card .card-content p {
  display: inline-flex;
  align-items: center;
  padding: 2px 10px;
  background: var(--control-bg);
  border-radius: var(--radius-xl);
  border: 1px solid var(--border-soft);
  font-weight: 600;
}


/* Category Navigation */
.category-nav {
  padding: var(--space-xl) 0; /* reduzir altura vertical */
  background: var(--primary-bg);
}

.nav-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--space-md); /* reduzir espaços laterais */
}

.category-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); /* cards um pouco menores */
  gap: var(--space-md); /* reduzir gaps */
}

.category-card {
  background: var(--gradient-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg); /* borda mais compacta */
  padding: var(--space-md); /* reduzir padding interno */
  cursor: pointer;
  transition: all var(--transition-normal);
  display: flex;
  align-items: center;
  gap: var(--space-sm); /* reduzir espaçamento interno */
  position: relative;
  overflow: hidden;
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--gradient-primary);
  opacity: 0;
  transition: opacity var(--transition-normal);
}

.category-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
  border-color: var(--primary-accent);
}

.category-card:hover::before {
  opacity: 0.05;
}

.card-icon {
  font-size: 2rem; /* reduzir ícone */
  z-index: 1;
}

.card-content {
  flex: 1;
  z-index: 1;
}

.card-content h3 {
  font-size: 1.1rem; /* título mais compacto */
  font-weight: 600;
  margin-bottom: var(--space-xs); /* espaço menor */
  color: var(--text-primary);
}

.card-content p {
  color: var(--text-muted);
  font-size: 0.8rem; /* texto menor */
}

.card-arrow {
  font-size: 1.25rem; /* seta menor */
  color: var(--text-muted);
  transition: all var(--transition-fast);
  z-index: 1;
}

.category-card:hover .card-arrow {
  color: var(--primary-accent);
  transform: translateX(4px);
}

/* Category View */
.category-view {
  min-height: calc(100vh - 120px);
  background: var(--primary-bg);
}

/* Modern Header Styles */
.modern-header {
  background: linear-gradient(135deg, #1e293b 0%, #334155 50%, #475569 100%);
  border-bottom: 1px solid var(--border-soft-20);
  padding: var(--space-sm) var(--space-md);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-lg);
  min-height: 56px;
  backdrop-filter: blur(20px);
  box-shadow:
    0 4px 6px -1px rgba(0, 0, 0, 0.3),
    0 2px 4px -1px rgba(0, 0, 0, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  z-index: 20;
  overflow: visible;
}

.modern-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
}

.header-left {
  display: flex;
  align-items: center;
  gap: var(--space-lg);
  flex: 0 0 auto;
}

.appearance-action-bar {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  flex: 0 1 auto;
  min-width: 0;
  max-width: 100%;
  overflow-x: auto;
  padding: 0 var(--space-sm);
  margin-left: -20px;
  padding-left: calc(var(--space-sm) + 60px);
}

.appearance-action-bar::-webkit-scrollbar {
  display: none;
}

.appearance-action-group {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  flex-wrap: wrap;
}

.appearance-action-button {
  border: 1px solid rgba(148, 163, 184, 0.35);
  background: rgba(15, 23, 42, 0.35);
  color: var(--text-primary, #e2e8f0);
  border-radius: var(--radius-md);
  padding: 0.45rem 0.85rem;
  font-size: 0.78rem;
  font-weight: 600;
  letter-spacing: 0.02em;
  text-transform: none;
  cursor: pointer;
  transition: background var(--transition-fast, 0.2s) ease, color var(--transition-fast, 0.2s) ease, border-color var(--transition-fast, 0.2s) ease, box-shadow var(--transition-fast, 0.2s) ease;
  white-space: nowrap;
  backdrop-filter: blur(12px);
}

.appearance-action-button:hover:not(:disabled) {
  background: rgba(59, 130, 246, 0.22);
  border-color: rgba(59, 130, 246, 0.55);
  color: #ffffff;
