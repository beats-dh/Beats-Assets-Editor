/* Modern Form Elements */
.modern-input, .modern-select {
  padding: var(--space-sm) var(--space-md);
  background: var(--tertiary-bg);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-size: 0.9rem;
  transition: all var(--transition-fast);
  min-height: var(--control-height);
}

.modern-input:focus, .modern-select:focus {
  outline: none;
  border-color: var(--border-focus);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.input-group {
  margin-bottom: var(--space-lg);
}

/* Grid de formulário para o modal de adicionar som */
.form-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: var(--space-sm);
}
.form-grid > * { min-width: 0; }
.form-grid > label {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
  color: var(--text-primary);
}
.form-grid > div {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}
/* Ensure vertical stack for the right column in Add Sound */
.form-grid .stack-vertical {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
  position: relative;
  margin-top: 0; /* manter alinhamento natural com a coluna esquerda */
}
.form-grid .stack-vertical > .radio-group {
  position: absolute;
  top: -36px; /* mantém os rádios visuais acima do label */
  left: 0;
  margin: 0;
}
.form-grid .stack-vertical > label {
  display: flex;
  flex-direction: column;
  margin-top: var(--space-xs);
}
.form-grid > label input,
.form-grid > label select {
  width: 100%;
}
.form-grid .radio-group {
  grid-column: 1 / -1;
}
/* Checkbox inline em rótulos específicos */
.form-grid > label.checkbox-inline {
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
@media (max-width: 640px) {
  .form-grid {
    grid-template-columns: 1fr;
