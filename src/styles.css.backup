/* Animation Keyframes */
@keyframes slideInFromTop {
  from {
    transform: translateY(-20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0.95);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* Apply animations */
.modern-header {
  animation: slideInFromTop 0.6s ease-out;
}

.content-controls {
  animation: fadeIn 0.8s ease-out 0.2s both;
}

.search-input-wrapper {
  animation: scaleIn 0.5s ease-out 0.3s both;
}

.category-info {
  animation: fadeIn 0.7s ease-out 0.1s both;
}

.header-actions .action-btn {
  animation: scaleIn 0.4s ease-out calc(0.4s + var(--delay, 0s)) both;
}

.header-actions .action-btn:nth-child(1) { --delay: 0s; }
.header-actions .action-btn:nth-child(2) { --delay: 0.1s; }
.header-actions .action-btn:nth-child(3) { --delay: 0.2s; }



.search-container {
  position: relative;
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.search-container .search-input-wrapper {
  flex: 1;
}

/* Alinhamento do botão Adicionar Som à esquerda da busca */
.search-container #sounds-header-actions {
