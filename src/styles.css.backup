.sp-buttons .sp-play:focus-visible,
.sp-buttons .sp-add:focus-visible {
  outline: 2px solid var(--border-focus);
  outline-offset: 2px;
}

.sp-buttons .sp-play[disabled],
.sp-buttons .sp-add[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

.selected-chips {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-sm);
  margin-bottom: var(--space-sm);
}
.chip {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: 2px 8px;
  font-size: 0.85rem;
}
.chip-remove { margin-left: 6px; opacity: 0.7; }

.btn-primary {
  background: var(--gradient-primary);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.btn-secondary {
  background: var(--tertiary-bg);
  color: var(--text-secondary);
  border: 1px solid var(--border-color);
}

.btn-secondary:hover {
  background: var(--surface-bg);
  color: var(--text-primary);
  border-color: var(--border-hover);
}

.btn-icon {
  font-size: 1rem;
}

/* Assets Grid */
.view-content {
  padding: 0;
}

.modern-assets-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: var(--space-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-2xl);
}

.asset-item {
  background: var(--gradient-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--space-md);
  padding-top: calc(var(--space-md) + 40px);
  cursor: pointer;
  transition: all var(--transition-normal);
  text-align: center;
  position: relative;
  --asset-id-top: 24px;
  --asset-id-left: 50%;
  --asset-id-translate-x: -50%;
  --asset-id-translate-y: 0;
}

.asset-item:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-accent);
}

.asset-item.is-selected {
  border-color: var(--primary-accent);
  box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.3), var(--shadow-lg);
}

.asset-item.is-active {
  border-color: rgba(59, 130, 246, 0.75);
  box-shadow:
    0 0 0 2px rgba(59, 130, 246, 0.35),
    0 16px 30px rgba(15, 23, 42, 0.35);
  transform: translateY(-4px);
}

.asset-flags {
  display: flex;
  align-items: center;
  gap: 6px;
}

.asset-id {
  position: absolute;
  top: var(--asset-id-top);
  left: var(--asset-id-left);
  transform: translate(var(--asset-id-translate-x), var(--asset-id-translate-y));
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 0;
  padding: 0 var(--space-sm);
  text-align: center;
  font-weight: 600;
  color: var(--text-primary);
  pointer-events: none;
  z-index: 2;
}

.asset-item[data-category="Objects"] {
  --asset-id-top: var(--objects-id-top, 24px);
  --asset-id-left: var(--objects-id-left, 50%);
  --asset-id-translate-x: var(--objects-id-translate-x, -50%);
  --asset-id-translate-y: var(--objects-id-translate-y, 0);
}

.asset-item[data-category="Outfits"] {
  --asset-id-top: var(--outfits-id-top, 24px);
  --asset-id-left: var(--outfits-id-left, 50%);
  --asset-id-translate-x: var(--outfits-id-translate-x, -50%);
  --asset-id-translate-y: var(--outfits-id-translate-y, 0);
}

.asset-item[data-category="Missiles"] {
  --asset-id-top: var(--missiles-id-top, 24px);
  --asset-id-left: var(--missiles-id-left, 50%);
  --asset-id-translate-x: var(--missiles-id-translate-x, -50%);
  --asset-id-translate-y: var(--missiles-id-translate-y, 0);
}

.asset-item[data-category="Effects"] {
  --asset-id-top: var(--effects-id-top, 24px);
  --asset-id-left: var(--effects-id-left, 50%);
  --asset-id-translate-x: var(--effects-id-translate-x, -50%);
  --asset-id-translate-y: var(--effects-id-translate-y, 0);
}

.asset-visual-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-sm);
}

.asset-visual-row .asset-image-container {
  flex: 1;
  margin-bottom: 0;
}

.asset-select-control {
  position: absolute;
  top: 8px;
  left: 8px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border-radius: var(--radius-md);
  border: 1px solid var(--border-color);
  background: rgba(15, 23, 42, 0.5);
  cursor: pointer;
  transition: all var(--transition-fast);
  z-index: 3;
}

.asset-select-control:hover {
  border-color: var(--primary-accent);
  box-shadow: 0 0 0 1px rgba(79, 70, 229, 0.35);
}

.asset-select-control:focus-within {
  outline: none;
  border-color: var(--primary-accent);
  box-shadow:
    0 0 0 1px rgba(79, 70, 229, 0.4),
    0 0 0 4px rgba(79, 70, 229, 0.2);
}

.asset-select-control input {
  position: absolute;
  inset: 0;
  opacity: 0;
  cursor: pointer;
}

.asset-select-indicator {
  width: 18px;
  height: 18px;
  border-radius: 6px;
  border: 2px solid rgba(148, 163, 184, 0.6);
  background: rgba(15, 23, 42, 0.7);
  transition: all var(--transition-fast);
  box-shadow: inset 0 1px 2px rgba(15, 23, 42, 0.6);
}

.asset-select-checkbox:checked + .asset-select-indicator {
  border-color: var(--primary-accent);
  background: rgba(79, 70, 229, 0.75);
  box-shadow:
    inset 0 0 6px rgba(15, 23, 42, 0.45),
    0 0 8px rgba(79, 70, 229, 0.55);
}

.asset-item.is-selected .asset-select-control {
  border-color: var(--primary-accent);
  background: rgba(79, 70, 229, 0.15);
}

.asset-item.is-selected .asset-select-indicator {
  border-color: var(--primary-accent);
  background: rgba(79, 70, 229, 0.75);
  box-shadow:
    inset 0 0 6px rgba(15, 23, 42, 0.45),
    0 0 8px rgba(79, 70, 229, 0.55);
}

.asset-image {
  width: 100%;
  height: 120px;
  object-fit: contain;
  margin-bottom: var(--space-sm);
  border-radius: var(--radius-md);
  background: var(--tertiary-bg);
}

.asset-image-container {
  width: 100%;
  height: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-sm);
  border-radius: var(--radius-md);
  background: var(--tertiary-bg);
  overflow: hidden;
  position: relative;
}

.asset-image-overlay {
  position: absolute;
  top: 8px;
  left: 8px;
  right: 8px;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  pointer-events: none;
  gap: var(--space-sm);
}

.asset-image-overlay .asset-flags {
  pointer-events: auto;
}

.sprite-image {
  width: 68px;
  height: 68px;
  /* max-width: 200%;
  max-height: 200%; */
  object-fit: contain;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
}

.asset-name {
  margin-top: 15px;
}

/* Pagination */
.pagination-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-lg);
  padding: var(--space-lg);
  background: var(--secondary-bg);
  border-radius: var(--radius-lg);
}

.pagination-btn {
  padding: var(--space-sm) var(--space-lg);
  background: var(--tertiary-bg);
  border: 1px solid var(--border-color);
  color: var(--text-secondary);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.pagination-btn:hover:not(:disabled) {
  background: var(--surface-bg);
  color: var(--text-primary);
  border-color: var(--border-hover);
}

.pagination-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.pagination-info {
  color: var(--text-muted);
  font-size: 0.9rem;
}

/* Modal */
.asset-details-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1000;
  display: none;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.2s ease-out;
}

.asset-details-modal.show {
  display: flex;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  backdrop-filter: blur(8px);
  cursor: pointer;
}

.modal-content {
  position: relative;
  background: linear-gradient(135deg, #1a1d29 0%, #0f1117 100%);
  border: 1px solid rgba(139, 92, 246, 0.3);
  border-radius: 16px;
  max-width: 900px;
  max-height: 90vh;
  width: 90vw;
  overflow: hidden;
  box-shadow:
    0 20px 60px rgba(0, 0, 0, 0.5),
    0 0 0 1px rgba(139, 92, 246, 0.1),
    0 0 40px rgba(139, 92, 246, 0.15);
  animation: slideUp 0.3s ease-out;
}

.modal-header {
  /* Reduz a altura do cabeçalho */
  padding: 0.75rem 1rem;
  border-bottom: 1px solid rgba(139, 92, 246, 0.2);
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(59, 130, 246, 0.05) 100%);
}

.modal-tabs {
  display: flex;
  gap: 8px;
  align-items: center;
}

.modal-actions {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.modal-nav-controls {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.35rem 0.5rem;
  border-radius: 999px;
  background: rgba(139, 92, 246, 0.16);
  border: 1px solid rgba(139, 92, 246, 0.35);
  box-shadow: 0 12px 28px rgba(15, 17, 23, 0.45);
  backdrop-filter: blur(6px);
}

.detail-nav-btn {
  width: 38px;
  height: 38px;
  border: none;
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: rgba(15, 23, 42, 0.65);
  color: #f9fafb;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.2s ease, background 0.2s ease, box-shadow 0.2s ease;
  box-shadow:
    inset 0 0 0 1px rgba(139, 92, 246, 0.4),
    0 8px 20px rgba(15, 23, 42, 0.35);
}

.detail-nav-btn:hover:not(:disabled) {
  background: rgba(59, 130, 246, 0.7);
  transform: translateY(-1px);
  box-shadow:
    inset 0 0 0 1px rgba(59, 130, 246, 0.8),
    0 10px 24px rgba(30, 64, 175, 0.4);
}

.detail-nav-btn:active:not(:disabled) {
  transform: translateY(0);
  background: rgba(37, 99, 235, 0.85);
}

.detail-nav-btn:disabled {
  opacity: 0.4;
  cursor: not-allowed;
  box-shadow: inset 0 0 0 1px rgba(148, 163, 184, 0.25);
  background: rgba(15, 23, 42, 0.35);
}

.tab-btn {
  background: transparent;
  border: 1px solid rgba(139, 92, 246, 0.3);
  color: #e5e7eb;
  padding: 6px 10px;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
}

.tab-btn.active {
  background: rgba(139, 92, 246, 0.2);
  border-color: rgba(139, 92, 246, 0.5);
}

.tab-content {
  padding: 1rem;
}

.modal-header h2,
.modal-header h3 {
  font-size: 1.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  /* Remove margens padrão para compactar o header */
  margin: 0;
}

.close-btn {
  width: 36px;
  height: 36px;
  border: none;
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
  font-weight: 600;
  box-shadow: 0 2px 8px rgba(239, 68, 68, 0.3);
}

.close-btn:hover {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(239, 68, 68, 0.5);
}

.close-btn:active {
  transform: scale(0.95);
}

.modal-body {
  padding: 1.5rem;
  max-height: calc(90vh - 80px);
  overflow-y: auto;
  scrollbar-width: thin;
  scrollbar-color: rgba(139, 92, 246, 0.5) rgba(139, 92, 246, 0.1);
}

/* Seções e ações dentro de modais de edição (inclui Adicionar Som) */
.edit-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}
.edit-section > p {
  margin: 0;
  color: var(--text-secondary);
}
.edit-subsection {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}
.edit-subsection .form-grid {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}
.edit-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: var(--space-sm);
  margin-top: var(--space-sm);
}

.modal-body::-webkit-scrollbar {
  width: 8px;
}

.modal-body::-webkit-scrollbar-track {
  background: rgba(139, 92, 246, 0.1);
  border-radius: 4px;
}

.modal-body::-webkit-scrollbar-thumb {
  background: rgba(139, 92, 246, 0.5);
  border-radius: 4px;
}

.modal-body::-webkit-scrollbar-thumb:hover {
  background: rgba(139, 92, 246, 0.7);
}

/* Detail Sections */
.detail-section {
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: rgba(139, 92, 246, 0.03);
  border: 1px solid rgba(139, 92, 246, 0.15);
  border-radius: 12px;
  transition: all 0.2s ease;
}

.detail-section:hover {
  background: rgba(139, 92, 246, 0.05);
  border-color: rgba(139, 92, 246, 0.25);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.1);
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-actions {
  margin-top: 1rem;
}

.detail-actions-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 0.5rem;
}

.detail-section h4 {
  color: #8b5cf6;
  font-size: 1.1rem;
  font-weight: 700;
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.detail-section h4::before {
  content: '';
  width: 4px;
  height: 1.1rem;
  background: linear-gradient(180deg, #8b5cf6 0%, #3b82f6 100%);
  border-radius: 2px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem 0;
  font-size: 0.95rem;
  border-bottom: 1px solid rgba(139, 92, 246, 0.08);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  color: #94a3b8;
  font-weight: 600;
}

.detail-value {
  color: #e2e8f0;
  font-weight: 500;
}

/* Sprite IDs Section */
.detail-item-full {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 0.75rem 0;
  border-bottom: 1px solid rgba(139, 92, 246, 0.08);
}

.detail-item-full:last-child {
  border-bottom: none;
}

.sprite-ids-section .detail-label {
  color: #8b5cf6;
  font-weight: 700;
  margin-bottom: 0.25rem;
}

.sprite-ids-value {
  color: #cbd5e1;
  font-size: 0.9rem;
  line-height: 1.6;
  font-family: 'Courier New', monospace;
  word-break: break-all;
}

.sprite-ids-full {
  color: #cbd5e1;
  font-size: 0.9rem;
  line-height: 1.6;
  font-family: 'Courier New', monospace;
  word-break: break-all;
  padding: 0.75rem;
  background: rgba(139, 92, 246, 0.05);
  border: 1px solid rgba(139, 92, 246, 0.15);
  border-radius: 8px;
  max-height: 300px;
  overflow-y: auto;
}

.sprite-ids-expand-btn {
  align-self: flex-start;
  padding: 0.5rem 1rem;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.15) 0%, rgba(59, 130, 246, 0.1) 100%);
  border: 1px solid rgba(139, 92, 246, 0.3);
  border-radius: 6px;
  color: #8b5cf6;
  font-size: 0.85rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.sprite-ids-expand-btn:hover {
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.25) 0%, rgba(59, 130, 246, 0.15) 100%);
  border-color: rgba(139, 92, 246, 0.5);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.2);
}

.sprite-ids-expand-btn:active {
  transform: translateY(0);
}

/* Flags Grid */
.flags-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.flag-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.5rem 0.875rem;
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(16, 185, 129, 0.05) 100%);
  border: 1px solid rgba(16, 185, 129, 0.4);
  border-radius: 8px;
  color: #10b981;
  font-size: 0.875rem;
  font-weight: 600;
  transition: all 0.2s ease;
  cursor: default;
}

.flag-badge:hover {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.25) 0%, rgba(16, 185, 129, 0.1) 100%);
  border-color: rgba(16, 185, 129, 0.6);
  transform: translateY(-1px);
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.2);
}

/* NPC Data */
.npc-data-item {
  margin-bottom: 0.75rem;
  padding: 1rem;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.08) 0%, rgba(99, 102, 241, 0.03) 100%);
  border: 1px solid rgba(99, 102, 241, 0.3);
  border-radius: 10px;
  transition: all 0.2s ease;
}

.npc-data-item:hover {
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.12) 0%, rgba(99, 102, 241, 0.05) 100%);
  border-color: rgba(99, 102, 241, 0.4);
  transform: translateX(4px);
}

.npc-data-item strong {
  color: #6366f1;
  display: block;
  margin-bottom: 0.5rem;
  font-size: 1rem;
  font-weight: 700;
}

/* Frame Group Detail */
.frame-group-detail {
  margin-bottom: 0.75rem;
  padding: 1rem;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(59, 130, 246, 0.03) 100%);
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 10px;
  transition: all 0.2s ease;
}

.frame-group-detail:hover {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.12) 0%, rgba(59, 130, 246, 0.05) 100%);
  border-color: rgba(59, 130, 246, 0.4);
  transform: translateX(4px);
}

.frame-group-detail strong {
  color: #3b82f6;
  display: block;
  margin-bottom: 0.5rem;
  font-size: 1rem;
  font-weight: 700;
}

/* Animation Player */
.animation-player {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-top: 0.5rem;
}

.anim-canvas {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.anim-sprite-image {
  width: 64px;
  height: 64px;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
  object-fit: contain;
}

.anim-phase-label {
  font-size: 0.8rem;
  color: #64748b;
  font-weight: 600;
}

.anim-controls {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.anim-btn {
  padding: 0.25rem 0.5rem;
}

.anim-speed input {
  width: 90px;
  margin-left: 0.25rem;
}

/* Detail Sprites */
.detail-sprites {
  width: 100%;
  min-height: 100px;
}

.detail-sprites-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
  gap: 0.75rem;
  padding: 0.5rem 0;
}

.detail-sprite-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.08) 0%, rgba(59, 130, 246, 0.05) 100%);
  border: 1px solid rgba(139, 92, 246, 0.2);
  border-radius: 10px;
  transition: all 0.2s ease;
}

.detail-sprite-item:hover {
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.15) 0%, rgba(59, 130, 246, 0.1) 100%);
  border-color: rgba(139, 92, 246, 0.4);
  transform: translateY(-4px);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.2);
}

.detail-sprite-item.animating {
  border-color: rgba(59, 130, 246, 0.6);
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.3);
}

.detail-sprite-image {
  width: 44px;
  height: 44px;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
  object-fit: contain;
}

.sprite-index {
  font-size: 0.75rem;
  color: #8b5cf6;
  font-weight: 600;
}

.sprite-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  color: #94a3b8;
  font-size: 1.5rem;
}

.no-sprites {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  padding: 2rem;
  color: #64748b;
}

.sprite-placeholder {
  width: 68px;
  height: 68px;
  background: linear-gradient(135deg, rgba(100, 116, 139, 0.1) 0%, rgba(100, 116, 139, 0.05) 100%);
  border: 2px dashed rgba(100, 116, 139, 0.3);
  border-radius: 8px;
}

.sprite-error {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  color: #ef4444;
  font-weight: 600;
}

/* Status Toast */
.status-toast {
  position: fixed;
  top: var(--space-lg);
  right: var(--space-lg);
  background: var(--gradient-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--space-md) var(--space-lg);
  box-shadow: var(--shadow-lg);
  /* Ensure toast appears above the loading-screen overlay */
  z-index: 10001;
  transform: translateX(100%);
  transition: transform var(--transition-normal);
}

.status-toast.show {
  transform: translateX(0);
}

.status-toast.success {
  border-color: var(--success-color);
  background: linear-gradient(135deg, var(--tertiary-bg) 0%, rgba(16, 185, 129, 0.1) 100%);
}

.status-toast.error {
  border-color: var(--error-color);
  background: linear-gradient(135deg, var(--tertiary-bg) 0%, rgba(239, 68, 68, 0.1) 100%);
}

/* Subcategory Container */
.subcategory-container {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.subcategory-container label {
  color: var(--text-secondary);
  font-size: 0.9rem;
  font-weight: 500;
}

/* Animations */
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Responsive Design */
@media (max-width: 768px) {
  .header-content {
    flex-direction: column;
    gap: var(--space-md);
    text-align: center;
  }
  
  .header-stats {
    order: -1;
  }
  
  .category-cards {
    grid-template-columns: 1fr;
  }
  
  .modern-assets-grid {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: var(--space-md);
  }
  
  .pagination-controls {
    flex-direction: column;
    gap: var(--space-md);
  }
}

@media (max-width: 480px) {
  .loading-container {
    padding: var(--space-md);
  }
  
  .setup-card {
    padding: var(--space-lg);
  }
  
  .modern-assets-grid {
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  }
}

@media (min-width: 1200px) {
  .modern-header .header-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    margin: 0;
  }
}

/* Subcategories Styling */
.subcategories-section {
  margin-top: 2rem;
  width: 100%;
}

.subcategories-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 1rem;
  padding: 0 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.subcategories-title::before {
  content: '📦';
  font-size: 1.5rem;
}

.subcategories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
  gap: 0.75rem;
}

.subcategory-card {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: var(--tertiary-bg);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-secondary);
}

.subcategory-card:hover {
  background: var(--surface-bg);
  border-color: var(--primary-accent);
  color: var(--text-primary);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.subcategory-card:active {
  transform: translateY(0);
}

.subcat-icon {
  font-size: 1.25rem;
  flex-shrink: 0;
}

.subcat-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Mobile responsive subcategories */
@media (max-width: 768px) {
  .subcategories-section {
    margin-top: 1.5rem;
  }

  .subcategories-title {
    font-size: 1.125rem;
  }

  .subcategories-grid {
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 0.5rem;
  }

  .subcategory-card {
    padding: 0.5rem 0.75rem;
    font-size: 0.8125rem;
  }

  .subcat-icon {
    font-size: 1rem;
  }
}

/* Edit Modal - Form Styling */
#edit-content .detail-item {
  display: grid;
  grid-template-columns: 160px 1fr auto;
  align-items: center;
  gap: var(--space-sm);
  padding: 0.5rem 0;
  border-bottom: 1px solid rgba(139, 92, 246, 0.08);
}

#edit-content .detail-item .detail-label {
  color: var(--text-secondary);
  font-weight: 600;
}

#edit-content input[type="text"],
#edit-content input[type="number"],
#edit-content textarea,
#edit-content select {
  width: 100%;
  padding: var(--space-sm) var(--space-md);
  background: var(--control-bg);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-size: 0.95rem;
  transition: all var(--transition-fast);
}

#edit-content input[type="text"]::placeholder,
#edit-content input[type="number"]::placeholder,
#edit-content textarea::placeholder {
  color: var(--text-muted);
}

#edit-content input[type="text"]:focus,
#edit-content input[type="number"]:focus,
#edit-content textarea:focus,
#edit-content select:focus {
  outline: none;
  border-color: var(--border-focus);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
  background: var(--tertiary-bg);
}

#edit-content textarea {
  min-height: 90px;
  resize: vertical;
}

.btn,
.btn-primary,
.btn-secondary,
.icon-btn,
.action-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.btn,
.btn-primary,
.btn-secondary {
  height: var(--control-height);
  padding: 0 var(--space-md);
  white-space: nowrap;
  border: 1px solid var(--border-soft-20);
  background: var(--control-bg);
  color: var(--text-secondary);
}

.btn-primary {
  background: var(--gradient-primary);
  color: #fff;
  border-color: var(--border-soft-30);
}

.btn-secondary {
  background: var(--surface-bg);
  border-color: var(--border-color);
}

.btn:hover,
.btn-primary:hover,
.btn-secondary:hover {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  border-color: var(--border-hover);
}

/* Container para ações na seção Editar Item */
#edit-content .detail-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-sm);
  padding-top: 0.5rem;
}

/* Inputs numéricos: ocultar spinners nativos e usar controles custom */
#edit-content input[type="number"] {
  -moz-appearance: textfield;
}
#edit-content input[type="number"]::-webkit-outer-spin-button,
#edit-content input[type="number"]::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Wrapper e controles customizados */
#edit-content .number-input {
  position: relative;
}
#edit-content .number-input input[type="number"] {
  padding-right: 2.4rem;
}
#edit-content .spinner-controls {
  position: absolute;
  right: 6px;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 2px;
}
#edit-content .spinner-controls button {
  width: 24px;
  height: 16px;
  border: 1px solid var(--border-color);
  background: var(--surface-bg);
  color: var(--text-secondary);
  border-radius: 4px;
  cursor: pointer;
  line-height: 1;
  padding: 0;
}
#edit-content .spinner-controls button:hover {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  border-color: var(--border-hover);
}
#edit-content .spinner-controls .spinner-up::before {
  content: '▲';
  font-size: 10px;
  display: block;
  text-align: center;
}
#edit-content .spinner-controls .spinner-down::before {
  content: '▼';
  font-size: 10px;
  display: block;
  text-align: center;
}

#edit-content .detail-section h4 {
  margin-bottom: 0.75rem;
}

#edit-content .flags-grid {
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 0.75rem;
}

#edit-content .flag-toggle {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 0.75rem;
  background: var(--surface-bg);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  color: var(--text-secondary);
  cursor: pointer;
  transition: all var(--transition-fast);
}

#edit-content .flag-toggle:hover {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  border-color: var(--border-hover);
  transform: translateY(-1px);
}

#edit-content .flag-toggle input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: var(--primary-accent);
  cursor: pointer;
}

@media (max-width: 600px) {
  #edit-content .detail-item {
    grid-template-columns: 1fr;
    gap: var(--space-sm);
  }
  #edit-content .btn-primary,
  #edit-content .btn-secondary {
    width: 100%;
    margin-top: var(--space-sm);
  }
}

/* Audio Player Styles */
.details-section h3 {
  font-size: 1.2rem;
  font-weight: 700;
  margin-bottom: var(--space-sm);
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.sound-audio-container {
  background: var(--surface-bg);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--space-md);
  box-shadow: var(--shadow-sm);
}

/* Oculta o container do player quando está vazio para não formar uma barra */
.sound-audio-container:empty {
  display: none;
}

/* No Add Sound modal, fixe o player e evite impactar o layout */
#add-sound-modal #add-sound-audio-player {
  position: absolute;
  left: 16px;
  right: 16px;
  bottom: 88px; /* acima dos botões Salvar/Cancelar */
  z-index: 5;
  pointer-events: none; /* permite clicar nos elementos abaixo quando vazio */
}
#add-sound-modal #add-sound-audio-player .sound-player {
  pointer-events: auto; /* o áudio continua interativo */
  height: 32px;
}

.sound-player {
  width: 100%;
  height: 40px;
  background: var(--tertiary-bg);
  border: 1px solid var(--border-soft-20);
  border-radius: var(--radius-md);
}

.loading-audio {
  color: var(--text-muted);
  font-size: 0.9rem;
}

.audio-error {
  color: var(--error-color);
  background: rgba(239, 68, 68, 0.08);
  border: 1px solid rgba(239, 68, 68, 0.3);
  border-radius: var(--radius-md);
  padding: var(--space-sm);
}

.random-sounds-controls {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-sm);
  align-items: center;
}

.random-sound-btn,
.random-sounds-playall-btn {
  height: var(--control-height);
  padding: 0 var(--space-sm);
  border-radius: var(--radius-md);
  border: 1px solid var(--border-soft-20);
  background: var(--control-bg);
  color: var(--text-secondary);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.random-sound-btn:hover,
.random-sounds-playall-btn:hover {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  border-color: var(--border-hover);
}

.random-sounds-playall-btn {
  background: var(--gradient-primary);
  color: #fff;
  border-color: var(--border-soft-30);
}

.random-sounds-playall-btn:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}
/* New standardized buttons for Save/Add/Delete in modal */
.btn-save,
.btn-add,
.btn-delete {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: var(--control-height);
  padding: 0 var(--space-md);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  white-space: nowrap;
  border: 1px solid var(--border-soft-20);
  gap: var(--space-sm);
  font-size: 0.9rem;
}

.btn-save {
  background: var(--gradient-primary);
  color: white;
  border-color: var(--border-soft-30);
}
.btn-save:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.btn-add {
  background: linear-gradient(135deg, var(--success-color) 0%, #34d399 100%);
  color: white;
  border-color: var(--border-soft-30);
}
.btn-add:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.btn-delete {
  background: linear-gradient(135deg, var(--error-color) 0%, #dc2626 100%);
  color: white;
  border-color: var(--border-soft-30);
}
.btn-delete:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

/* Secondary/neutral button */
.btn-secondary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: var(--control-height);
  padding: 0 var(--space-md);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  white-space: nowrap;
  border: 1px solid var(--border-soft-20);
  gap: var(--space-sm);
  font-size: 0.9rem;
  background: var(--control-bg);
  color: var(--text-secondary);
}
.btn-secondary:hover {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  border-color: var(--border-hover);
}

/* Texture tab layout */
.texture-layout {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  align-items: flex-start;
}

.texture-preview-column {
  flex: 1 1 320px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.texture-preview-card {
  background: var(--surface-elevated);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 220px;
}

.texture-preview-card canvas {
  image-rendering: pixelated;
  max-width: 100%;
}

.texture-preview-controls {
  background: var(--surface-elevated);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.texture-control-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  align-items: center;
}

.texture-control-row label {
  display: flex;
  flex-direction: column;
  font-size: 0.85rem;
  color: var(--text-secondary);
}

.texture-control-row input[type="range"] {
  width: 180px;
}

.texture-control-label {
  font-size: 0.85rem;
  color: var(--text-secondary);
}

.texture-color-row label {
  gap: 6px;
}

.texture-color-row input[type="color"],
.texture-control-row input[type="color"] {
  width: 42px;
  height: 28px;
  padding: 0;
  border: 1px solid var(--border-color);
  border-radius: 6px;
  background: transparent;
}

.texture-checkbox-row label {
  flex-direction: row;
  gap: 8px;
  font-size: 0.85rem;
}

.texture-direction-btn {
  border: 1px solid var(--border-color);
  background: var(--surface-muted);
  color: var(--text-primary);
  padding: 6px 12px;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.2s ease;
}

.texture-direction-btn.active,
.texture-direction-btn:hover {
  background: var(--primary-color);
  color: #fff;
  border-color: var(--primary-color);
}

.texture-settings-column {
  flex: 1 1 380px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.texture-form-section {
  background: var(--surface-elevated);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.texture-form-section h4 {
  margin: 0;
  font-size: 1rem;
  color: var(--text-primary);
}

.texture-form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 12px;
}

.texture-form-grid label {
  display: flex;
  flex-direction: column;
  font-size: 0.85rem;
  color: var(--text-secondary);
}

.texture-form-grid input[type="number"],
.texture-form-grid input[type="text"] {
  margin-top: 4px;
  padding: 6px 10px;
  border-radius: 8px;
  border: 1px solid var(--border-color);
  background: var(--surface-muted);
  color: var(--text-primary);
}

.texture-form-grid input[type="number"]:focus,
.texture-form-grid input[type="text"]:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(47, 128, 237, 0.15);
}

.texture-form-grid .texture-checkbox {
  flex-direction: row;
  align-items: center;
  gap: 8px;
}

.texture-animation-phases {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.texture-phase-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  align-items: center;
}

.texture-phase-row label {
  display: flex;
  flex-direction: column;
  font-size: 0.8rem;
  color: var(--text-secondary);
}

.texture-bounding-boxes {
  display: flex;
  flex-direction: column;
  gap: 12px;
  overflow-x: auto;
}

.texture-bounding-section {
  width: 100%;
}

.texture-bounding-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.85rem;
  background: var(--surface-muted);
  border-radius: 10px;
  overflow: hidden;
}

.texture-bounding-table th,
.texture-bounding-table td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid var(--border-color);
}

.texture-bounding-table tbody tr:last-child td {
  border-bottom: none;
}

.texture-bounding-table input[type="number"] {
  width: 100%;
  padding: 4px 6px;
  border-radius: 6px;
  border: 1px solid var(--border-color);
  background: var(--surface-base);
  color: var(--text-primary);
}

.texture-remove-box {
  border: none;
  background: transparent;
  color: var(--text-secondary);
  cursor: pointer;
  font-size: 1rem;
}

.texture-remove-box:hover {
  color: var(--danger-color);
}

.texture-form-actions {
  display: flex;
  justify-content: flex-end;
}

.texture-empty-state {
  padding: 24px;
  border-radius: 12px;
  border: 1px dashed var(--border-color);
  background: var(--surface-muted);
  color: var(--text-secondary);
  text-align: center;
}
